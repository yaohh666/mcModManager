/* pages/user/user.wxss */
.userinfo {
  height: 200rpx;
  display: flex;
  border-bottom: 5rpx solid rgb(214, 212, 212);
  box-shadow: 5px 2px 5px gray;
}

.userinfo button {
  margin-top: 55rpx;
  height: 90rpx;
  color: white;
  border: 10rpx solid rgb(139, 142, 143);
  background-color: rgb(119, 125, 128);
}

.userinfo image {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  margin-left: 50rpx;
  margin-right: 30rpx;
  width: 140rpx;
  height: 140rpx;
  border: 6rpx solid gray;
  border-radius: 25%;
}

.userinfo-nickname {
  font-size: 50rpx;
  margin-right: 30rpx;
  margin-top: 100rpx;
  margin-left: 100rpx;
  font-weight: 500;
}

.userinfo-role {
  margin-right: 30rpx;
  font-size: 25rpx;
  margin-top: 125rpx;
  margin-bottom: 45rpx;
  color: rgb(0, 0, 0);
  border: 2rpx solid black;
  box-shadow: 0rpx 0rpx 5rpx 5rpx darkslategray;
}

.image-box {
  border: 5rpx solid rgb(214, 212, 212);
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
  box-shadow: 5px 2px 5px gray;
}

.image-item {
  width: 33%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-right: 1rpx solid #efefef;
}

.image-item image {
  width: 60rpx;
  height: 60rpx;
}

.image-item text {
  font-size: 24rpx;
  margin-top: 10rpx;
}

.text-image {
  display: flex;
  border: 5rpx solid rgb(214, 212, 212);
  margin-top: 20rpx;
  box-shadow: 5px 2px 5px gray;
}

.text-box {
  height: 95%;
  width: 60%;
  margin-top: 2.5%;
  margin-bottom: 2.5%;
  margin-left: 2.5%;
  margin-right: 2.5%;
  border-right: 1rpx solid #efefef;
}

.code-avatar {
  margin-top: 1%;
  margin-bottom:1%;
  margin-left: 1%;
  margin-right: 1%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.code-avatar image {
  width: 200rpx;
  height: 200rpx;
}